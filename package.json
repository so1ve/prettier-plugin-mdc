{
  "name": "prettier-plugin-mdc",
  "version": "0.1.0",
  "packageManager": "pnpm@10.26.2",
  "author": "Ray <i@mk1.io> (@so1ve)",
  "type": "module",
  "description": "Prettier plugin for MDC syntax",
  "keywords": [
    "prettier",
    "prettier-plugin",
    "mdc",
    "markdown",
    "remark",
    "unified"
  ],
  "homepage": "https://github.com/so1ve/prettier-plugin-mdc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/so1ve/prettier-plugin-mdc.git"
  },
  "bugs": {
    "url": "https://github.com/so1ve/prettier-plugin-mdc/issues"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./yaml-worker": "./dist/yaml-worker.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "eslint . && prettier . --check",
    "lint:fix": "eslint . --fix && prettier . --write",
    "release": "bumpp --commit --push --tag",
    "test": "vitest",
    "typecheck": "nr typecheck:isolated && nr typecheck:non-isolated",
    "typecheck:isolated": "tsc --noEmit --project tsconfig.isolated.json",
    "typecheck:non-isolated": "tsgo --noEmit --project tsconfig.non-isolated.json",
    "watch": "tsdown --watch"
  },
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-mdc": "^3.10.0",
    "remark-parse": "^11.0.0",
    "synckit": "^0.11.11",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@antfu/ni": "^28.0.0",
    "@so1ve/eslint-config": "^4.1.5",
    "@so1ve/prettier-config": "^4.1.5",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251029.1",
    "bumpp": "^10.3.2",
    "dedent": "^1.7.1",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "prettier": "~3.6.2"
  }
}
