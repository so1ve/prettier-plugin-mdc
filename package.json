{
	"name": "pkg-name",
	"version": "0.0.0",
	"packageManager": "pnpm@10.23.0",
	"author": "Ray <i@mk1.io> (@so1ve)",
	"type": "module",
	"description": "",
	"keywords": [],
	"homepage": "https://github.com/so1ve/pkg-name#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/so1ve/pkg-name.git"
	},
	"bugs": {
		"url": "https://github.com/so1ve/pkg-name/issues"
	},
	"license": "MIT",
	"sideEffects": false,
	"exports": {
		".": "./dist/index.mjs",
		"./yaml-worker": "./dist/yaml-worker.mjs",
		"./package.json": "./package.json"
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"prepublishOnly": "nr build",
		"release": "bumpp --commit --push --tag && pnpm publish",
		"test": "vitest",
		"typecheck": "nr typecheck:isolated && nr typecheck:non-isolated",
		"typecheck:isolated": "tsc --noEmit --project tsconfig.isolated.json",
		"typecheck:non-isolated": "tsgo --noEmit --project tsconfig.non-isolated.json",
		"watch": "tsdown --watch"
	},
	"dependencies": {
		"@types/mdast": "^4.0.4",
		"@types/unist": "^3.0.3",
		"mdast-util-to-markdown": "^2.1.2",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"remark-mdc": "^3.8.1",
		"remark-parse": "^11.0.0",
		"remark-stringify": "^11.0.0",
		"stringify-entities": "^4.0.4",
		"synckit": "^0.11.11",
		"unified": "^11.0.5"
	},
	"devDependencies": {
		"@antfu/ni": "^27.0.1",
		"@so1ve/eslint-config": "^4.1.4",
		"@so1ve/prettier-config": "^4.1.4",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20251029.1",
		"bumpp": "^10.3.1",
		"dedent": "^1.7.0",
		"eslint": "^9.39.1",
		"prettier": "^3.6.2",
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3",
		"vite": "^7.2.4",
		"vitest": "^4.0.13"
	},
	"peerDependencies": {
		"prettier": "~3.6.2"
	}
}
